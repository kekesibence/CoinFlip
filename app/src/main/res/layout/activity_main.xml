<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coin"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/heads" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_fej"
            android:layout_width="535px"
            android:layout_height="wrap_content"
            android:onClick="fejClick"
            android:text="Fej" />

        <Button
            android:id="@+id/btn_iras"
            android:layout_width="535px"
            android:layout_height="wrap_content"
            android:onClick="irasClick"
            android:text="Iras" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dobasok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dobások: 0"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/txt_gyozelem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Győzelem: 0"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/txt_veresegek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vereség: 0"
            android:textSize="10pt"/>
    </LinearLayout>
</LinearLayout>